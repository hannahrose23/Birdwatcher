@model Birdwatcher.Models.UsersBirds

@{
    ViewData["Title"] = "Create";

    var bird= Context.Request.Query["bird"];
    var name = @User.Identity.Name;
    var image = Context.Request.Query["imagelocation"];
}

<h2>Add @(bird) to My Bird Log</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!--<label asp-for="Name" class="control-label"></label>-->
                <input type = "hidden" asp-for="Name" class="form-control" value="@(name)"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="Bird" class="control-label"></label>-->
                <input type="hidden" asp-for="Bird" class="form-control" value="@(bird)"/>
                <span asp-validation-for="Bird" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!--<label asp-for="ImageLocation" class="control-label"></label>-->
                <input type="hidden" asp-for="ImageLocation" class="form-control" value="@(image)"/>
                <span asp-validation-for="ImageLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateSeen" class="control-label"></label>
                <input asp-for="DateSeen" class="form-control" />
                <span asp-validation-for="DateSeen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
